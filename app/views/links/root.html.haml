%h2	type in the long url to get an shorten url
%form{ :action => shorten_url, :method => "POST" }
	= form_auth
	.label-container.clearfix
		.label
			%label{:for => "out_url"}
				long url:
		.item
			%input{:type => "text", :name => "link[out_url]", :id => "out_url", :value => @link[:out_url]}
	%input{:type => "submit", :value => "get shortend url", :class=>"submit-btn"}

- if @link.in_url
	.label-container.clearfix
		.label 
			short url:
		.item
			= link_to "#{@link.in_url}", short_url(@link.in_url)